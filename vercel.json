{
  "crons": [
    {
      "path": "/api/sync",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/sync/claude-skills",
      "schedule": "0 2 * * *",
      "description": "每日凌晨2点同步 Claude Skills"
    }
  ],
  "functions": {
    "src/app/api/sync/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/sync-simple/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/cron-test/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/sync/claude-skills/route.ts": {
      "maxDuration": 5
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["hkg1"],
  "buildCommand": "npm run build",
  "installCommand": "npm install"
} 