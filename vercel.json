{
  "crons": [
    {
      "path": "/api/sync",
      "schedule": "0 * * * *"
    }
  ],
  "functions": {
    "src/app/api/sync/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/sync-simple/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/cron-test/route.ts": {
      "maxDuration": 10
    },
    "src/app/api/sync/claude-skills/route.ts": {
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["hkg1"],
  "buildCommand": "npm run build",
  "installCommand": "npm install"
} 